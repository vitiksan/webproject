<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <welcome-file-list>
    <welcome-file>personalpage.jsp</welcome-file>
  </welcome-file-list>

  <context-param>
    <param-name>host</param-name>
    <param-value>localhost:8080</param-value>
  </context-param>

  <servlet>
    <servlet-name>FirstServlet</servlet-name>
    <servlet-class>com.test.servlets.FirstServlet</servlet-class>
    <init-param>
      <param-name>login</param-name>
      <param-value>admin</param-value>
    </init-param>
    <init-param>
      <param-name>pass</param-name>
      <param-value>1111</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>FirstServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
  <servlet-name>IDeveloper</servlet-name>
  <servlet-class>com.test.servlets.IDeveloper</servlet-class>
</servlet>

  <servlet-mapping>
    <servlet-name>IDeveloper</servlet-name>
    <url-pattern>/IDeveloper</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CheckBox</servlet-name>
    <servlet-class>com.test.servlets.CheckBox</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CheckBox</servlet-name>
    <url-pattern>/CheckBox</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CheckRHL</servlet-name>
    <servlet-class>com.test.servlets.CheckRHL</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CheckRHL</servlet-name>
    <url-pattern>/CheckRHL</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Timer</servlet-name>
    <servlet-class>com.test.servlets.Timer</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Timer</servlet-name>
    <url-pattern>/Timer</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>TimerResult</servlet-name>
    <servlet-class>com.test.servlets.TimerResult</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TimerResult</servlet-name>
    <url-pattern>/TimerResult</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>Servlet1</servlet-name>
    <servlet-class>com.test.servlets.Servlet1</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Servlet1</servlet-name>
    <url-pattern>/Servlet1</url-pattern>
  </servlet-mapping>
</web-app>
